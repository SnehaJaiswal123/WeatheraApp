<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bakbak+One&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/1fe7987506.js" crossorigin="anonymous"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@700&display=swap');

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        .main {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around;
            background-size: cover;
            height: 100vh;
            background-image: url(https://images.unsplash.com/photo-1592210454359-9043f067919b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8d2VhdGhlcnxlbnwwfHwwfHw%3D&w=1000&q=80);
        }

        .container {
            height: 10vh;
            flex-direction: row;

        }

        #city {
            border: 1px solid grey;
            border-radius: 12px;
            width: 40vw;
            height: 7vh;
            text-align: center;
        }

        button {
            color: grey;
            border: 1px solid grey;
            border-radius: 12px;
            width: 8vw;
            height: 7vh;
        }

        .box1 {
            color: white;
        }

        .box2 {
            color: white;
            font-size: small;

        }

        .info {
            background-color: black;
            opacity: 0.5;
            height: 30vh;
            width: 22vw;
            display: flex;
            flex-direction: column;
            border: 1px solid transparent;
            border-radius: 10px;
            justify-content: space-evenly;
            align-items: center;
        }

        input {
            outline: 0cm;
        }

        button:hover {
            cursor: pointer;
        }

        .second {
            font-family: 'Josefin Sans', sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
            height: 35vh;
            width: 30vw;
            background-color: rgb(0, 0, 0);
            border: 1px solid transparent;
            border-radius: 10px;
            opacity: 0.5;
        }

        #location,
        #country,
        #description {
            font-size: x-large;
        }

        #temp {
            font-size: xx-large;
        }
    </style>

</head>

<body>
    <div class="main">
       
        <div class="container">
            <form class="form" action="/" method="post">
                <input type="text" name="city" id="city" placeholder="Enter City Name" autocomplete="off">
                <button type="submit">search</button>
            </form>
        </div>
        <div class="second">
            <div><span class="box1" id="location">
                    <%=location%>,
                </span>
                <span class="box1" id="country">
                    <%=country%>
                </span>
            </div>
            <div class="box1" id="temp">
                <%= temperature%>°C
                <span id="icon"></span>
            </div>
            <div class="box1" id="description">
                <%= description%>
            </div>
        </div>
        <div class="info">
            <div class="box2">Humidity:<%= humidity%>%</div>
            <div class="box2">Wind-Speed:<%= windSpeed%>m/hr</div>
            <div class="box2">Feel-Like:<%= feelslike%>°C</div>
        </div>
    </div>
    <script>
        
        let description=document.getElementById("description").innerText;
        let sky=description.includes("sky");
        let rain=description.includes("rain");
        let clouds=description.includes("clouds");
        let fog=description.includes("fog");
        let drizzle=description.includes("drizzle");
        let mist=description.includes("mist");
        var icon=document.getElementById("icon");
        if(sky){
        icon.innerHTML=`<i class="fa-solid fa-cloud-sun"></i>`
        }
        if(rain){
        icon.innerHTML=`<i class="fa-solid fa-cloud-rain"></i>`
        }
        if(clouds){
        icon.innerHTML=`<i class="fa-solid fa-cloud"></i>`
        }
        if(fog){
        icon.innerHTML=`<i class="fa-solid fa-smog"></i>`
        }
        if(drizzle){
        icon.innerHTML=`<i class="fa-solid fa-cloud-showers-heavy"></i>`
        }
        if(mist){
        icon.innerHTML=`<i class="fa-sharp fa-solid fa-cloud-sun fa-1.5x"></i>`
        }
        else{
            icon.innerHTML=`<i class="fa-solid fa-cloud"></i>`
        }
    </script>
</body>

</html>